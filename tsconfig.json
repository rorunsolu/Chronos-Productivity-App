{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist",
    "composite": true,
    "noEmit": false,
    "types": ["react", "vite/client", "node"],
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",

    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
