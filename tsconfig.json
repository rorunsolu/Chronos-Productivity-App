{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "compilerOptions": {
    // "outDir": "./dist", // Set output directory to avoid conflicts
    "composite": true,
    "noEmit": false,
    "types": [
      "react",
      "vite/client"
    ],
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    // ShadCN config (https://ui.shadcn.com/docs/installation/vite)
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}